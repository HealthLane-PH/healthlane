{
  "name": "healthlane",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {},
  "scripts": {
    "dev": "turbo run dev --filter=web",
    "build": "turbo run build --filter=web",
    "lint": "turbo run lint --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
