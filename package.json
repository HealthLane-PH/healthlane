    "postcss": "8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "3.4.10",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@heroicons/react": "2.1.5",
    "@types/node": "^24.8.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.4.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.546.0",
    "nativewind": "2.0.11",
    "next": "^15.5.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.74.3",
    "react-native-web": "0.19.12",
    "react-toastify": "^9.1.3"
