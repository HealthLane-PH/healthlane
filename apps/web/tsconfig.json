{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    //"moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    //"jsx": "preserve",
    "incremental": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": [
      "react",
      "react-dom"
    ],
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@healthlane/ui/*": [
        "../../packages/ui/*"
      ],
      "@healthlane/auth/*": [
        "../../packages/auth/*"
      ],
      "@healthlane/theme/*": [
        "../../packages/theme/*"
      ],
      "@healthlane/auth": [
        "../../packages/auth/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}